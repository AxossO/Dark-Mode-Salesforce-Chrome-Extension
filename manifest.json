{
  "manifest_version": 3,
  "name": "Salesforce Dark Mode",
  "version": "0.2",
  "description": "Applies dark mode To Salesforce Lightning Experience ",
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["https://shahidmbc.lightning.force.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/night-16px.png",
      "32": "icons/night-32px.png",
      "64": "icons/night-64px.png",
      "128": "icons/night-128px.png"
    },
    "default_title": "Salesforce Dark Mode"
  },
  "icons": {
    "16": "icons/night-16px.png",
    "32": "icons/night-32px.png",
    "64": "icons/night-64px.png",
    "128": "icons/night-128px.png"
  },
  "content_scripts": [
    {
      "matches": ["https://shahidmbc.lightning.force.com/lightning/*"],
      "js": ["contentScript.js"],
      "css": ["darkmode.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["darkmode.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
